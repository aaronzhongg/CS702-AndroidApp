<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaron.cashme.OverviewFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/netIncomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="$0.00"
        android:textAlignment="center"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/netIncomeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/netIncomeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/net_income"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/overviewListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/netIncomeLabel"
        android:layout_marginTop="68dp" />

</RelativeLayout>
