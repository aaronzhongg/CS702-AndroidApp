<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaron.cashme.Fragments.ExpensesFragment"
    android:background="@color/colorPrimary"
    >

    <TextView
        android:id="@+id/expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/title_expenses"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/lightTextColour"/>

    <TextView
        android:id="@+id/elbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Expenses"
        android:textSize="25sp"
        android:layout_above="@+id/expensesListView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="@color/lightTextColour"/>


    <TextView
        android:id="@+id/expensesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/elbl"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="0"
        android:textSize="50sp"
        android:textColor="@color/lightTextColour"/>


    <Button
        android:id="@+id/expensesPlusButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:text="+"
        android:layout_alignBottom="@+id/expenses"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp" />

    <ListView
        android:id="@+id/expensesListView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorSecondary"
        android:textColor="@color/lightTextColour"
        />


</RelativeLayout>
