<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaron.cashme.IncomeFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_income"
        android:textSize="30sp"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/yourIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Income"
        android:textSize="25sp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/value"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/income"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="0"
        android:textSize="50sp" />


    <Button
        android:id="@+id/plusButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="21dp"
        android:text="+"
        android:layout_alignBottom="@+id/income"
        android:layout_alignParentRight="true" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yourIncome"
        android:layout_marginTop="46dp" />


</RelativeLayout>
